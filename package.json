{
  "name": "typescript-api-starter",
  "version": "1.0.0",
  "description": "typescript api starter",
  "author": "Mark Adel",
  "license": "MIT",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "start": "npm run build && cross-env NODE_ENV=production node dist/index.js",
    "start:prod": "npm run build && pm2 start ecosystem.config.js --env production",
    "start:staging": "npm run build && pm2 start ecosystem.config.js --env development",
    "start:dev": "nodemon src/index.ts",
    "restart": "npm run build & pm2 restart ecosystem.config.js",
    "test": "jest --forceExit --detectOpenHandles",
    "lint": "eslint src"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "celebrate": "^15.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "envalid": "^7.2.2",
    "express": "^4.17.1",
    "express-async-handler": "^1.2.0",
    "helmet": "^4.6.0",
    "http-status": "^1.5.0",
    "morgan": "^1.10.0",
    "pm2": "^5.3.0",
    "rimraf": "^5.0.1",
    "source-map-support": "^0.5.21",
    "swagger-ui-express": "^4.3.0",
    "typescript": "^5.0.4",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.5",
    "@types/source-map-support": "^0.5.6",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.0",
    "eslint-plugin-security-node": "^1.1.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1"
  }
}
